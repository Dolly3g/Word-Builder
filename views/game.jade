html
 head
  title Word Builder
  link(rel="stylesheet" href="stylesheets/style.css" type="text/css")
  script(src="javascripts/jquery-2.1.3.js" type="text/javascript")
  script(src="javascripts/socket.io.js" type="text/javascript")
  script(src="javascripts/main.js" type="text/javascript")
   
body
 div(id = "div_words")
 form
  span
   if currentUser == username
    input(type="text" id="input_word")
   else
    input(type="text" id="input_word" disabled)

   h1 #{username}
   input(type="hidden" value="#{username}" id="hidden_username")
   input(type="hidden" value="#{currentUser}" id="hidden_currentUser")
   input(type="hidden" value="#{users}" id="hidden_users")
   button(type="button" id="btn_send") Send
 div(id="div_wordMeaning")

 div(id="div_users")